name: Security Scan

on:
  push:
    branches: ["main"]
  pull_request:

jobs:
  security:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Go
        uses: actions/setup-go@v5
        with:
          go-version: "1.21"

      - name: Install dependencies
        run: go mod download

      {{- if .Tools.Semgrep }}
      - name: Run Semgrep
        uses: returntocorp/semgrep-action@v1
        with:
          config: "p/ci"
      {{- end }}

      {{- if .Tools.Gitleaks }}
      - name: Run Gitleaks
        uses: zricethezav/gitleaks-action@v2
      {{- end }}

      {{- if .Tools.Trivy }}
      - name: Trivy FS Scan
        uses: aquasecurity/trivy-action@master
        with:
          scan-type: fs
          severity: HIGH,CRITICAL
      {{- end }}
